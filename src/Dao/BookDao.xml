<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Dao.BookDao">


	
	<select id="findBookList"   resultType="domain.Book">
		SELECT tb_book.* FROM tb_book 
	</select>
	
	<select id="findBookById" resultType="domain.Book">
		SELECT * FROM tb_book where bid=#{bid}
	</select>
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
</mapper>